# Server Configuration
PORT=3000

# AWS Configuration
# For production, use real AWS credentials
# For local development with DynamoDB Local, these can be your actual AWS creds (they're not used for billing)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Configuration (production only)
S3_BUCKET_NAME=your-s3-bucket-name

# DynamoDB Configuration
# Production: use actual table names
# Local development: use the terraform table names created by setup script
DYNAMODB_TABLE_NAME=documents-terraform
DYNAMODB_TABLE_USERS=users-terraform

# Application Secrets
ADMIN_PASSWORD=password
JWT_SECRET=your-secure-jwt-secret-key
INGESTION_API_TOKEN=your-api-token

# Environment Settings
# Set to 'true' for local development with DynamoDB Local (localhost:8000)
# Set to 'false' or remove for production AWS DynamoDB
IS_TEST_ENV=true